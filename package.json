{
  "name": "toronto-rising-tts",
  "version": "1.0.0",
  "description": "Tabletop Simulator LUA modding project",
  "scripts": {
    "build:css": "sass UI/styles.scss UI/styles.css",
    "build:css:watch": "sass --watch UI/styles.scss:UI/styles.css",
    "build:ts": "tsc",
    "build:ts:watch": "tsc --watch",
    "build:js": "esbuild UI/src/script.ts --bundle --outfile=UI/script.js --format=iife --global-name=HUD --target=es2020",
    "build:js:watch": "esbuild UI/src/script.ts --bundle --outfile=UI/script.js --format=iife --global-name=HUD --target=es2020 --watch",
    "build": "npm run build:css && npm run build:js",
    "build:watch": "npm run build:css:watch & npm run build:js:watch",
    "lint": "echo 'Install luacheck for linting: luarocks install luacheck'",
    "format": "echo 'Install stylua for formatting: cargo install stylua'"
  },
  "keywords": [
    "tabletop-simulator",
    "lua",
    "modding"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "gsap": "^3.12.5"
  },
  "devDependencies": {
    "sass": "^1.77.0",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.6",
    "esbuild": "^0.19.11"
  }
}
